<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGroundMain"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            android:backgroundTint="@color/colorPrimary">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:textColor="@color/whiteMain"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/point_text"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/endPoints"/>

    <TextView
        android:textColor="@color/whiteMain"
        android:textSize="30sp"
        android:layout_below="@+id/point_text"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_margin="15dp"
        android:id="@+id/score_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:textSize="30sp"
        android:fontFamily="@font/font_jap"
        android:background="@drawable/button_basic"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/score_count"
        android:text="@string/gameMenu"
        android:layout_centerHorizontal="true"
        android:id="@+id/toGameMenuBtn"
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <Button
        android:textSize="30sp"
        android:fontFamily="@font/font_jap"
        android:layout_marginStart="20dp"
        android:layout_height="80dp"
        android:background="@drawable/button_basic"
        android:id="@+id/toMainMenuBtn"
        android:layout_marginTop="10dp"
        android:text="@string/mainMenu1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toGameMenuBtn"
        android:layout_width="match_parent"
         />

</RelativeLayout>